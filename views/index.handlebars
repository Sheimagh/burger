  <div class="container">

    <div class="jumbotron">
      <h1 class="text-centre">Burgersssss</h1>
      <hr>
<ul>
  
  {{#each burgers}}
    {{#unless devoured}}
    {{name}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured Burgers</h2>

<ul>
  {{#each burgers}}
    {{!-- {{#unless devoured}}
      {{> burgers/burger-block}}
    {{/if}} --}}
  {{/each}}
</ul>

<h2>Order Burgers</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Name of the Burger:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add your Burger</button>
</form>
